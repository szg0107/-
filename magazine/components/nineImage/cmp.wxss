/* components/nineImage/cmp.wxss */

.container {
    width: 700rpx;
}

.img-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    height: 700rpx;
    overflow: hidden;
    position: relative;
}

.image {
    width: 31%;
    height: 31%;
}

.img-num {
    position: absolute;
    right: 80rpx;
    bottom: 80rpx;
    background-color:rgba(0,0,0,.5);
    color: #fff;
    padding:5rpx 10rpx;
}

.text-container {
    padding: 0 30rpx;
    font-size: 40rpx;
    font-weight: 400;
    letter-spacing: 2rpx;
    word-break: break-word;
}
