/* pages/type/type.wxss */

.markType {
    box-sizing: border-box;
    position: relative;
}

.markImage {
    width: 100%;
}

.mark-box {
    position: absolute;
    background-color: #fff;
    margin: 0 auto;
    bottom: -40rpx;
    padding: 20rpx;
    left: 0;
    right: 0;
    width: 80%;
}
.mark-box text{
    font-weight:bolder;
}

